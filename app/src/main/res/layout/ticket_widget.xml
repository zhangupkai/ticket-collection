<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:clickable="true"
    android:focusable="true"
    android:padding="12dp">

    <!-- 主要路线信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/widget_departure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="北京"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="→"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp" />

        <TextView
            android:id="@+id/widget_train_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G1234"
            android:textSize="12sp"
            android:textColor="#E3F2FD"
            android:background="@drawable/widget_train_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="→"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp" />

        <TextView
            android:id="@+id/widget_destination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上海"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />
    </LinearLayout>

    <!-- 详细信息卡片 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/widget_info_background"
        android:padding="8dp">

        <!-- 第一行：日期、时间、座位 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/widget_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2024-01-01"
                android:textSize="10sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/widget_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="18:57"
                android:textSize="10sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/widget_seat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12A"
                android:textSize="10sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- 第二行：乘客、座席、票价 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/widget_passenger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="张三"
                android:textSize="10sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/widget_seat_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="二等座"
                android:textSize="10sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/widget_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="¥553.5"
                android:textSize="10sp"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- 第三行：检票口 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_gate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="18B"
                android:textSize="10sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击查看"
                android:textSize="8sp"
                android:textColor="#1976D2"
                android:background="@drawable/widget_button_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout> 